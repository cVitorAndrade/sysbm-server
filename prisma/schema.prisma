// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Librarian {
  id          String   @id
  email       String   @unique
  name        String
  password    String
  permission  String
  cpf         String
  phoneNumber String
  status      String
  createdAt   DateTime
  Book        Book[]
}

model BookShelf {
  id          String   @id
  name        String
  color       String
  description String?
  createdAt   DateTime
  Shelf       Shelf[]
  Book        Book[]
}

model Shelf {
  id          String    @id
  number      String
  letter      String
  bookShelf   BookShelf @relation(fields: [bookShelfId], references: [id], onDelete: Cascade)
  bookShelfId String
  Book        Book[]
}

model Book {
  id                 String    @id
  registrationNumber String
  author             String
  volume             String
  bookShelf          BookShelf @relation(fields: [bookShelfId], references: [id])
  shelf              Shelf     @relation(fields: [shelfId], references: [id])
  shelfId            String
  bookShelfId        String
  publicationYear    String
  notes              String?
  publisher          String
  createdAt          DateTime
  copies             String
  acquisitionMethod  String
  title              String
  librarian          Librarian @relation(fields: [librarianId], references: [id])
  librarianId        String
  genre              String
  language           String
  available          String
  isbn               String
  numberOfPages      String
}

model Reader {
  id          String   @id
  email       String   @unique
  name        String
  cpf         String
  phoneNumber String
  createdAt   DateTime
  status      String
  birtDate    DateTime
}

model Address {
  id           String @id
  street       String
  number       String
  city         String
  postalCode   String
  neighborhood String
}
